{
  "version": 2,
  "builds": [
    {
      "src": "api/search-artist.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/artist.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/artist-tracks.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/artist-albums.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/search-artist",
      "dest": "/api/search-artist.js"
    },
    {
      "src": "/api/artist",
      "dest": "/api/artist.js"
    },
    {
      "src": "/api/artist-tracks",
      "dest": "/api/artist-tracks.js"
    },
    {
      "src": "/api/artist-albums",
      "dest": "/api/artist-albums.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|svg|ico|json))",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}
